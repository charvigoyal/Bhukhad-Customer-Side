<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/generalbg"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/iconpurp" />
    <View
        android:layout_width="14dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"

        android:orientation="vertical"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/nameCartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of the Item "
            android:textAlignment="textStart"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceCartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="5dp"
            android:text="Price : (x rs)"
            android:textAlignment="textStart" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/canteenNameCart"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:text="Canteen Name"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"

        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/increment"
            android:layout_width="34dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_height="34dp"
            android:text="+" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/decrement"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="-" />
        <Button
            android:id="@+id/remove"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="Remove" />

    </LinearLayout>

</LinearLayout>
